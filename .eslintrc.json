{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "overrides": [
    {
      "files": ["tests/**/*"],
      "env": {
        "jest": true
      }
    }
  ],
  "rules": {
    "no-console": "off",
    "prefer-const": "off",
    "no-plusplus": "off",
    "no-param-reassign": "off",
    "no-alert": "off",
    "no-use-before-define": "off",
    "prefer-destructuring": "off",
    "import/no-cycle": "off",
    "no-inner-declarations": "off",
    "no-await-in-loop": "off",
    "no-promise-executor-return": "off",
    "no-restricted-syntax": "off",
    "no-shadow": "off"
  }
}
